# safe and loud file operations
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -iv'

# make hexdump pretty
alias hd='hexdump -C'

# history fu
alias hg='history | grep'
alias hl='history | less'

# pgrep my way
alias pg='ps aux | grep'

# edit file as root
alias svim='sudo vim'

# simple untar
alias untar='tar xzvf'
